{
  "name": "@protocolsync/shared-styles",
  "version": "3.0.0",
  "description": "Shared design system for ProtocolSync applications (web & mobile)",
  "main": "scss/index.scss",
  "types": "mobile/index.ts",
  "exports": {
    ".": "./scss/index.scss",
    "./scss/*.scss": "./scss/*.scss",
    "./design-tokens": {
      "types": "./design-tokens.d.ts",
      "import": "./design-tokens.js",
      "require": "./design-tokens.js",
      "default": "./design-tokens.js"
    },
    "./design-tokens.json": "./design-tokens.json",
    "./tailwind-preset": {
      "import": "./tailwind/preset.js",
      "require": "./tailwind/preset.js",
      "default": "./tailwind/preset.js"
    },
    "./mobile": "./mobile/index.ts",
    "./mobile/theme": "./mobile/theme.ts",
    "./mobile/tokens": "./mobile/tokens.ts",
    "./mobile/nativewind-preset": {
      "import": "./mobile/nativewind-preset.js",
      "require": "./mobile/nativewind-preset.js",
      "default": "./mobile/nativewind-preset.js"
    }
  },
  "files": [
    "scss/**/*.scss",
    "design-tokens.json",
    "design-tokens.js",
    "design-tokens.d.ts",
    "tailwind/**/*.js",
    "mobile/**/*.ts",
    "mobile/**/*.js",
    "scripts/**/*.js"
  ],
  "scripts": {
    "generate-tokens": "node scripts/generate-tokens.js",
    "prepublishOnly": "npm run generate-tokens"
  },
  "keywords": [
    "protocolsync",
    "scss",
    "styles",
    "design-system",
    "react-native",
    "mobile"
  ],
  "author": "Protocol Sync LLC",
  "license": "PRIVATE",
  "peerDependencies": {
    "@coreui/coreui": "^5.0.0",
    "sass": "^1.0.0",
    "react-native-paper": "^5.0.0"
  },
  "peerDependenciesMeta": {
    "react-native-paper": {
      "optional": true
    },
    "@coreui/coreui": {
      "optional": true
    },
    "sass": {
      "optional": true
    }
  },
  "devDependencies": {
    "@coreui/coreui": "^5.4.3",
    "react-native-paper": "^5.12.5"
  }
}
